<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:gravity="center"
    android:theme="@style/Theme.ProfileManager.AppWidgetContainer">

    <ImageView
        android:id="@+id/background"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:src="@drawable/widget_background_light"/>
    <ImageView
        android:id="@+id/tint"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerInParent="true"
        android:src="@drawable/widget_background_dark_tint"/>
    <ImageView
        android:id="@+id/mode_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:src="@drawable/widget_symbol_night"/>
</RelativeLayout>